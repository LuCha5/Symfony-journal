{% extends 'base.html.twig' %}

{% block title %}Ajouter un Article{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Ajouter un Article</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    <div class="mb-3">
        {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.titre) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.contenu, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.contenu) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.auteur, 'Auteur', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.auteur, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.auteur) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.categorie) }}
    </div>
    <button type="submit" class="btn btn-success">Enregistrer</button>
    <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Retour à la liste</a>
    {{ form_end(form) }}
</div>
{% endblock %}
