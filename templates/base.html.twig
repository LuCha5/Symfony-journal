<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Bienvenue !{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">  

    <style>
        /* Styles pour le mode sombre */
        body.dark-mode {
            background-color: #343a40;
            color: #ffffff;
        }
        .dark-mode .navbar {
            background-color: #495057;
        }
        .dark-mode .card {
            background-color: #495057;
            color: #ffffff;
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Navbar Bootstrap -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_auteur_index') }}">Mon Application</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_auteur_index') }}">Auteurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_categorie_index') }}">Cat√©gories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_article_index') }}">Articles</a>
                    </li>
                </ul>
                <button id="toggleDarkMode" class="btn btn-outline-light ms-auto">
                    üåû <!-- Emoji du soleil pour le mode clair -->
                </button>
            </div>
        </div>
    </nav>

    <!-- Main content area -->
    <div class="container my-5">
        {% block body %}{% endblock %}
    </div>

    <!-- Bootstrap JS (including Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>        

    <script>
        // Script pour le changement de mode
        const toggleButton = document.getElementById('toggleDarkMode');
        toggleButton.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            // Changer l'emoji du bouton
            if (document.body.classList.contains('dark-mode')) {
                toggleButton.textContent = 'üåú'; // Emoji lune pour le mode sombre
            } else {
                toggleButton.textContent = 'üåû'; // Emoji soleil pour le mode clair
            }
            // Sauvegarder l'√©tat dans le localStorage
            localStorage.setItem('darkMode', document.body.classList.contains('dark-mode'));
        });

        // V√©rifier si le mode sombre est d√©j√† activ√© et appliquer
        if (localStorage.getItem('darkMode') === 'true') {
            document.body.classList.add('dark-mode');
            toggleButton.textContent = 'üåú'; // Emoji lune pour le mode sombre
        }
    </script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>
